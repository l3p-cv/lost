{
  "description": "This pipeline selects all images of a datasource and requests annotations.",
  "author": "Jonas Jaeger",
  "pipe-schema-version" : 0.1,
  "elements": [{
      "peN": 0,
      "peOut": [1],
      "datasource": {
        "type": "rawFile"
      }
    },
    {
      "peN": 1,
      "peOut": [2],
      "script": {
        "path": "request_annos.py",
        "description": "Request annotations for all images in a folder"
      }
    },
    {
      "peN": 2,
      "peOut": [3],
      "annoTask": {
        "name": "Single Image Annotation Task",
        "type": "sia",
        "instructions": "Please draw bounding boxes for all objects in image.",
        "configuration": {
          "tools": {
            "point": true,
            "line": true,
            "polygon": true,
            "bbox": true
          },
          "multilabels": true,
          "actions": {
            "drawing": true,
            "labeling": true,
            "edit": {
              "label": true,
              "bounds": true,
              "delete": true
            }
          }
        }
      }
    },
    {
      "peN": 3,
      "peOut": [4],
      "script": {
        "path": "export_csv.py",
        "description": "Export all annotations to a csv file."
      }
    },
    {
      "peN": 4,
      "peOut": null,
      "dataExport": {}
    }
  ]
}